<div local-class="content-page">
    <div local-class="content">
        <div local-class="head">
            <img src="" alt="">
            <p>{{t "apm.sign.completeBasicInfo"}}</p>
        </div>
        <div local-class="input-area">
            {{#bs-form model=this.model novalidate=true  as |form|}}
                <a href="#" local-class="code">{{t "apm.sign.sendVerificationCode"}}</a>
              {{form.element controlType="email" label=(t "apm.sign.name") placeholder="" property="email" required=true local-class="email"}}
              {{form.element controlType="string" label=(t "apm.sign.mobile") placeholder="" property="password" required=true}}
              {{form.element controlType="password" label=(t "apm.sign.mobileVerificationCode") placeholder="" property="password" required=true}}
              {{form.element controlType="password" label=(t "apm.sign.corpName") placeholder="" property="password" required=true}}
              {{form.element controlType="password" label=(t "apm.sign.position") placeholder="" property="password" required=true}}
              <div local-class="clicks">
                  {{bs-button onClick=(action (mut modal3) true) defaultText=(t "apm.determine") type="primary" buttonType="submit"}}
                  <div local-class="log">
                      {{t "apm.sign.hadAccount"}}
                      {{#link-to 'index'}}
                            {{t "apm.sign.clickLogin"}}
                      {{/link-to}}
                  </div>
             </div>
            {{/bs-form}}
            <div local-class="modal-dialog">
                {{#bs-modal open=modal3 onHidden=(action (mut modal3) false) as |modal|}}
                  {{#modal.body}}
                    <div local-class="alert">
                        <div local-class="con">
                            <img src="" alt="">
                            <p>{{t "apm.sign.signUpSuccess"}}</p>
                        </div>
                    </div>
                  {{/modal.body}}
                  {{#modal.footer}}
                    {{#link-to 'index'}}
                        {{#bs-button local-class="enter"}}{{t "apm.sign.goToLogin"}}{{/bs-button}}
                    {{/link-to}}
                  {{/modal.footer}}
                {{/bs-modal}}
            </div>

        </div>
    </div>
</div>
{{outlet}}

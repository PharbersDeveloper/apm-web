<div local-class="analyze-container">
	<div class="next-step">
		{{#bs-button class="btn-next" onClick=(action "nextStep")}}
			下一步
		{{/bs-button}}
	</div>
	<div local-class="analyze-section">
		{{!-- <div class="row"> --}}
			{{!-- <div class="col-md-12 col-lg-12 col-sm-12"> --}}
				{{area-base-info-table }}
			{{!-- </div> --}}
		{{!-- </div> --}}
	</div>
	{{#each model as |region|}}
		{{area-analyze-input data=region keyUp=(action 'saveToLocalStorage')}}
	{{/each}}
	{{!-- {{area-analyze-input }} --}}
</div>
{{#bs-modal open=notesEmpty onHidden=(action (mut notesEmpty) false) as |modal|}}
  {{#modal.header}}
    <h4 class="modal-title">
      <span></span>提示
      {{!-- <div class="badge">2</div> --}}
    </h4>
  {{/modal.header}}
  {{#modal.body}}
	<p>请填写完成 {{emptyNotesRegion}} 的内容！</p>
  {{/modal.body}}
  {{#modal.footer}}
    {{#bs-button onClick=(action modal.close)}}继续填写{{/bs-button}}
    {{!-- {{#bs-button type="danger"}}Delete{{/bs-button}} --}}
    {{!-- {{#bs-button type="success" onClick=(action modal.submit)}}继续填写{{/bs-button}} --}}
  {{/modal.footer}}
{{/bs-modal}}

<div local-class="action-plan-container">
	<div class="next-step">
		{{!-- {{#bs-button onClick=(action "nextStep")}} --}}
		{{#bs-button class="btn-next" onClick=(action "nextStep")}}
			下一步
		{{/bs-button}}
	</div>
	<div local-class="action-plan-radar">
		<select local-class="choose-area" onchange= {{action 'changeArea' value="target.value"}}>
		    {{#each region as |area|}}
		        <option  value={{area.id}}>{{area.name}}</option>
		    {{/each}}
		</select>
		{{radar-section-effectiveness  gradient="glowplan" radarSectionData=radarData changeArea=(action 'changeArea')}}
	</div>
	{{#each resortRegionModel as |region index|}}
		{{area-plan-info data=region index=index}}
	{{/each}}
</div>

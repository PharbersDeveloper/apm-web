{{#bs-modal open=tipsModal onSubmit=(action 'toUpshot') onHidden=(action (mut tipsModal) false) as |modal|}}
	{{#modal.header}}
		<h4 class="modal-title">
            <span></span>{{tipsTitle}}
        </h4>
	{{/modal.header}}
	{{#modal.body}}
		{{content-bound-helper tipsContent}}
	{{/modal.body}}
	{{#modal.footer}}
	{{#if isActionplanEmpty}}
		{{#bs-button onClick=(action modal.close)}}取消{{/bs-button}}
		{{#bs-button type="success" onClick=(action modal.submit)}}下一步{{/bs-button}}
	{{else}}
		{{#bs-button onClick=(action modal.close)}}继续填写{{/bs-button}}
	{{/if}}
	{{/modal.footer}}
{{/bs-modal}}

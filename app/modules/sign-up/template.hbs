<div local-class="content-page">
    <div local-class="content">
        <div local-class="head">
            <img src="" alt="">
            <p>{{t "apm.sign.userSignUp"}}</p>
        </div>
        <div local-class="input-area">
            {{!-- {{#bs-form model=this.model novalidate=false  as |form|}}
              <a href="#" local-class="code">{{t "apm.sign.sendVerificationCode"}}</a>
              {{form.element controlType="email" label=(t "apm.sign.mail") placeholder=(t "apm.sign.mail") property="email" required=true local-class="email"}}
              {{form.element controlType="string" label=(t "apm.sign.mailVerificationCode") placeholder="" property="password" required=true}}
              {{form.element controlType="password" label=(t "apm.sign.loginPassword") placeholder=(t "apm.sign.passwordHint") property="password" required=true}}
              {{form.element controlType="password" label=(t "apm.sign.confirmPassword") placeholder=(t "apm.sign.passwordHint") property="password" required=true}} --}}
            {{!-- {{#bs-form model=singup onSubmit=(action "submit") novalidate=false  as |form|}}
              <a href="#" local-class="code">发送验证码</a>
              {{form.element controlType="email" label="邮箱" placeholder="邮箱" property="email" required=true local-class="email"}}
              {{form.element controlType="string" label="邮箱验证码" placeholder="" property="password" required=true}}
              {{form.element controlType="password" label="登入密码" placeholder="8-20位字母和数字组合" property="password" required=true}}
              {{form.element controlType="password" label="确认密码" placeholder="8-20位字母和数字组合" property="password" required=true}}
              {{form.element controlType="text" label="用户名" placeholder="请注册用户名" property="text" required=true}}

              <div local-class="clicks">
                  {{#link-to 'perfect-info'}}
                    {{bs-button defaultText=(t "apm.sign.confirmSignUp") type="primary" buttonType="submit"}}
                  {{/link-to}}
                  <div local-class="log">
                      {{t "apm.sign.hadAccount"}}
                      {{#link-to 'index'}}
                            {{t "apm.sign.clickLogin"}}
                      {{/link-to}}
                  </div>
             </div>
            {{/bs-form}} --}}
            <div local-class="userinfo">
                <label local-class="title">{{t "apm.sign.name"}}</label>
                {{input id="userename" type="text" value=userName label="email" placeholder=(t "apm.sign.inputName") required=true local-class="name"}}
                {{!-- <p local-class="hint">{{nameHint.text}}</p> --}}
                <p local-class={{if nameHint.status 'hint' 'wrongText'}}>{{nameHint.text}}</p>


            </div>
            <div local-class="userinfo">
                <label local-class="title" for="useremail">{{t "apm.sign.mail"}}</label>
                {{input id="useremail" type="email" value=userEmail placeholder=(t "apm.sign.inputMail") required=true local-class="email"}}
                <p local-class={{if emailHint.status 'hint' 'wrongText'}}>{{emailHint.text}}</p>

            </div>
            <div local-class="userinfo">
                <label local-class="title">{{t "apm.sign.password"}}</label>
                {{input id="userpassword" type="password" value=userPassword placeholder=(t "apm.sign.inputPassword") required=true local-class="password"}}
                {{!-- <p local-class="hint">{{pwHint.text}}</p> --}}
                <p local-class={{if pwHint.status 'hint' 'wrongText'}}>{{pwHint.text}}</p>


            </div>
            <div local-class="clicks">
                {{!-- {{#link-to 'perfect-info'}} --}}
                {{#bs-button type="primary" onClick=(action "submit")}}{{t "apm.sign.confirmSignUp"}}{{/bs-button}}
                  {{!-- {{bs-button defaultText="确定注册" type="primary" onClick=(action 'submit')}} --}}
                {{!-- {{/link-to}} --}}
                <div local-class="log">
                    {{!-- 已有帐号？ --}}
                    {{t "apm.sign.hadAccount"}}
                    {{#link-to 'index'}}
                          {{!-- 点击登录 --}}
                          {{t "apm.sign.clickLogin"}}
                    {{/link-to}}
                </div>
            </div>
        </div>
    </div>
</div>
{{hint-modal hint=hint confirm=(action 'toLogin')}}
{{outlet}}

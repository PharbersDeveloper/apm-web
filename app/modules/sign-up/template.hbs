<div local-class="content-page">
    <div local-class="content">
        <div local-class="head">
            <img src="" alt="">
            <p>用户注册</p>
        </div>
        <div local-class="input-area">
            {{!-- {{#bs-form model=singup onSubmit=(action "submit") novalidate=false  as |form|}}
              <a href="#" local-class="code">发送验证码</a>
              {{form.element controlType="email" label="邮箱" placeholder="邮箱" property="email" required=true local-class="email"}}
              {{form.element controlType="string" label="邮箱验证码" placeholder="" property="password" required=true}}
              {{form.element controlType="password" label="登入密码" placeholder="8-20位字母和数字组合" property="password" required=true}}
              {{form.element controlType="password" label="确认密码" placeholder="8-20位字母和数字组合" property="password" required=true}}
              {{form.element controlType="text" label="用户名" placeholder="请注册用户名" property="text" required=true}}

              <div local-class="clicks">
                  {{#link-to 'perfect-info'}}
                    {{bs-button defaultText="确定注册" type="primary" buttonType="submit"}}
                  {{/link-to}}
                  <div local-class="log">
                      已有帐号？
                      {{#link-to 'index'}}
                            点击登录
                      {{/link-to}}
                  </div>
             </div>
            {{/bs-form}} --}}
            <div local-class="userinfo">
                <label local-class="title">名称</label>
                {{input id="userename" type="text" value=userName label="email" placeholder="请填写名称" required=true local-class="name"}}
                <p local-class="hint">{{nameHint.text}}</p>

            </div>
            <div local-class="userinfo">
                <label local-class="title" for="useremail">邮箱</label>
                {{input id="useremail" type="email" value=userEmail placeholder="请填写邮箱" required=true local-class="email"}}
                <p local-class="hint">{{emailHint.text}}</p>
            </div>
            <div local-class="userinfo">
                <label local-class="title">密码</label>
                {{input id="userpassword" type="password" value=userPassword placeholder="请填写密码" required=true local-class="password"}}
                <p local-class="hint">{{pwHint.text}}</p>

            </div>
            <div local-class="clicks">
                {{!-- {{#link-to 'perfect-info'}} --}}
                {{#bs-button type="primary" onClick=(action "submit")}}确定注册{{/bs-button}}
                  {{!-- {{bs-button defaultText="确定注册" type="primary" onClick=(action 'submit')}} --}}
                {{!-- {{/link-to}} --}}
                <div local-class="log">
                    已有帐号？
                    {{#link-to 'index'}}
                          点击登录
                    {{/link-to}}
                </div>
            </div>
            <p>{{errorText}}</p>
        </div>
    </div>
</div>
{{hint-modal hint=hint confirm=(action 'toLogin')}}

{{outlet}}

<div local-class="content-page">
    <div local-class="content">
        <div local-class="head">
            <img src="" alt="">
            <p>{{t "apm.sign.userSignUp"}}</p>
        </div>
        <div local-class="input-area">
            {{#bs-form model=this.model novalidate=false  as |form|}}
              <a href="#" local-class="code">{{t "apm.sign.sendVerificationCode"}}</a>
              {{form.element controlType="email" label=(t "apm.sign.mail") placeholder=(t "apm.sign.mail") property="email" required=true local-class="email"}}
              {{form.element controlType="string" label=(t "apm.sign.mailVerificationCode") placeholder="" property="password" required=true}}
              {{form.element controlType="password" label=(t "apm.sign.loginPassword") placeholder=(t "apm.sign.passwordHint") property="password" required=true}}
              {{form.element controlType="password" label=(t "apm.sign.confirmPassword") placeholder=(t "apm.sign.passwordHint") property="password" required=true}}
              <div local-class="clicks">
                  {{#link-to 'perfect-info'}}
                    {{bs-button defaultText=(t "apm.sign.confirmSignUp") type="primary" buttonType="submit"}}
                  {{/link-to}}
                  <div local-class="log">
                      {{t "apm.sign.hadAccount"}}
                      {{#link-to 'index'}}
                            {{t "apm.sign.clickLogin"}}
                      {{/link-to}}
                  </div>
             </div>
            {{/bs-form}}
        </div>
    </div>
</div>
{{outlet}}
